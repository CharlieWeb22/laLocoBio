{% extends 'base.html.twig' %}

{% block title %}Sur Commande{% endblock %}

{% block body %}
<header class="container-fluid d-none d-sm-none d-md-none d-lg-block d-xl-block">
    <div class="row">
        <!-- LOGO -->
        <div id="logo" class="col-lg-2 mt-2 pl-5">
            <a href="{{ path('accueil') }}"><img src="{{ asset('assets/images/logo/logo_carotte.png') }}" alt="logo de La Loco Bio"></a>
        </div>

        <!-- TITRE -->
        <div class="col-lg-10 mt-1">
            <div id="en_tete" class="row">
                <div id="titre_en_tete" class="col-lg-5">
                    La Loco Bio
                </div>
                <div id="sous_titre" class="col-lg-5 d-none d-sm-none d-md-none d-lg-block d-xl-block">
                    Epicerie Biologique Cooperative
                </div>
            </div>


            <!-- NAVBAR-->
            <div class="row">
                <div class="col-lg-10 pl-0 mt-2">

                    <nav class=" nav navbar-expand-lg navbar-custom">
                        <!-- TOGGGLER/COLLAPSIBLE BUTTON -->
                        <button class="navbar-toggler navbar-light d-block d-sm-block d-md-block d-lg-none d-xl-none"
                            type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false"
                            aria-label="Toggle navigation">
                            <span class="btn-toggler-icon"></span>
                            <span class="btn-toggler-icon"></span>
                            <span class="btn-toggler-icon"></span>
                        </button>

                        <!-- Links -->
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav" id="cust-nav">
                                <li class="nav-item">
                                    <a class="nav-link active pl-0 mr-4" href="{{ path('accueil') }}">Accueil</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link mr-4" href="{{ path('cooperative') }}">La Coopérative</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link mr-4" href="{{ path('producteurs') }}">Nos Producteurs</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link mr-4" href="{{ path('surcommande') }}">Sur Commande</a>
                                </li>
                                <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle mr-4" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                          Radio Loco
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                          <a class="dropdown-item" href="{{ path('rdvdumois_article') }}">Le rendez-vous du mois</a>
                                          <a class="dropdown-item" href="{{ path('onvaplusloin_article') }}">On va plus loin</a>
                                        </div>
                                      </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                                </li>
                                {% if is_granted('ROLE_REDAC') %}
                            <li>
                                <a class="btn btn-danger my-1 ml-1 mr-1" href="{{ path('easyadmin') }}" style="color:white;">Administration</a>
                            </li>
                            <li>
                                <a class="btn btn-warning my-1 ml-1 mr-1" href="{{ path('app_logout') }}" type="submit">Déconnexion</a>
                            </li>
                            {% endif %}
                            </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- Ligne Verte -->
    <div class="container-fluid px-0">
        <div class="row">
            <div id="red_line" class="col-lg-12"></div>
        </div>
    </div>
</header>
<!-- HEADER RESPONSIVE AVEC TOGGLER -->
<header>
    <div id="responsive_header_red" class="container-fluid d-block d-sm-block d-md-block d-lg-none d-xl-none px-2">
            <nav class="navbar navbar-custom px-0">
                    <a id="titre_en_tete_responsive" class="navbar-brand d-flex align-items-center" href="#">
                      <img class="mr-3" src="{{ asset('assets/images/logo/logo_carotte.png') }}" width="50" height="50" alt="logo_carotte">
                        La Loco Bio
                    </a>
                      <!-- TOGGGLER/COLLAPSIBLE BUTTON -->
                      <button class="navbar-toggler navbar-light d-block d-sm-block d-md-block d-lg-none d-xl-none"
                      type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                      aria-controls="navbarSupportedContent" aria-expanded="false"
                      aria-label="Toggle navigation">
                      <span class="btn-toggler-icon-red"></span>
                      <span class="btn-toggler-icon-red"></span>
                      <span class="btn-toggler-icon-red"></span>
                  </button>

                  <!-- Links -->
                  <div class="collapse navbar-collapse" id="navbarSupportedContent">
                      <ul class="navbar-nav" id="cust-nav">
                        <li class="nav-item">
                          <a class="nav-link active pl-0" href="{{ path('accueil') }}">Accueil</a>
                      </li>
                      <li class="nav-item">
                          <a class="nav-link" href="{{ path('cooperative') }}">La Coopérative</a>
                      </li>
                      <li class="nav-item">
                          <a class="nav-link" href="{{ path('producteurs') }}">Nos Producteurs</a>
                      </li>
                      <li class="nav-item">
                          <a class="nav-link" href="{{ path('surcommande') }}">Sur Commande</a>
                      </li>
                      <li class="nav-item dropdown">
                          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                              data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              Radio Loco
                          </a>
                          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                              <a class="dropdown-item" href="{{ path('rdvdumois_article') }}">Le rendez-vous du mois</a>
                              <a class="dropdown-item" href="{{ path('onvaplusloin_article') }}">On va plus loin</a>
                          </div>
                      </li>
                      <li class="nav-item">
                          <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                      </li>
                      </ul>
                  </nav>
    </div>
</header>
    <!-- FIL D'ARIANE -->
    <div class="container-fluid">
        <div class="row" id="fil_ariane" style="background-color: #CC3025;">
                <a href="{{ path('accueil') }}" class="btn btn-default"><i class="fa fa-home"></i></a>
                <a href="#" class="btn btn-default"><i class="fas fa-caret-right"></i></a>
                <a href="{{ path('surcommande') }}" class="btn btn-default"><div>Sur Commande</div></a>
        </div>
    </div>
    <!-- END FIL D'ARIANE -->


<!-- CONTENU PAGE -->
    <div class="container-fluid">
        <div class="row">
            <div class="jumbotron col-lg-12 bg-light">
                <h1 class="text-center display-4 font-italic">Les produits disponible sur Commande</h1>
                <hr class="separator_red">
                <p class="text-center">Lorsque vous passez une commande de gros contenant, vous obtenez une réduction de 10%, choisissez vos produits et appellez-nous pour passer commande au 05.45.78.67.44</p>
            </div>
        </div>
    </div>

<!-- LES ARTICLES -->

<div class="container">

  <!-- Les CATEGORIES MOMENTANEMENT SUPPRIMER
    <div class="row">

      <div class="col-lg-3">
        <div class="list-group">
          <a href="#" class="list-group-item" style="color:black; font-family:'impact'; letter-spacing:2px; text-transform: uppercase; background-color: #CC3025;"><i class="fas fa-stream"></i> Categories</a>
          <a href="#" class="list-group-item" style="color:black; font-family:'impact'; letter-spacing:2px;">Vrac</a>
        </div>

      </div>
    -->
      <!-- /.col-lg-3 -->
      <div class="col-lg-12">
        <div class="row">
          {% for produit in produit %}
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 p-3" style="border:none; box-shadow: 0 .5rem 1rem rgba(102, 47, 47, 0.15);">
                  <a href="catalogue_article.html"><img src="{{ asset('assets/uploads/images/produit/') }}{{ produit.ImageProduit }}" style="height:250px;" class="card-img-top" alt=""></a>
                    <div class="card-body">
                        <h4 class="card-title">
                          <a style="color:green;" href="catalogue_article.html">{{ produit.nom }}</a>
                        </h4>
                        <h5>{{ produit.prix}}</h5>
                        <p class="text-muted"><small>disponible en : {{ produit.poids }}</small></p>
                        <p>Origine : {{ produit.origine }}</p>
                        <p>Référence : {{ produit.reference}}</p>
                    </div>
                </div>
            </div>
          {% endfor %} 
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-lg-12 d-flex justify-content-center">
            <div class="text-center">{{ knp_pagination_render(produit) }}</div>
        </div>
    </div>
</div>

{% endblock %}
