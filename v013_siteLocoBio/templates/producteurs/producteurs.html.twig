                        <p style="margin:4px; border-radius: .25em;">Adresse : {{ producteurRegion.adresse }}<br>
                            </p>
                    </div>
                </div>
            </div> 
            {% endfor %} 
    </div>
</div>
    
<!-- end parti dans la région -->
<!-- Ligne de séparation producteur direct -->
<div class="row m-0">
    <div class="col-lg-12 d-flex justify-content-center" style="background-color: #FFB629; color:white;">
        <p class="my-1"
            style="font-size:25px; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">
            Producteur direct</p>
    </div>
</div>
<!-- End Ligne de séparation producteurs direct-->
<!-- Parti producteurs direct-->
<div class="container">
    <div class="row mt-3 mb-4">
            {% for producteurDirect in producteurDirect %}
            <div class="col-lg-4 col-md-6 mt-3">
                <!--Card Header-->
                <div class="card text-center"  style="border:none; box-shadow: 0 .5rem 1rem rgba(102, 47, 47, 0.15); height:450px;">
