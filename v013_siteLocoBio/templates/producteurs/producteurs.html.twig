                    <!--Card IMAGE-->
                    <img src="{{ asset('assets/uploads/images/producteurDirect/') }}{{ producteurDirect.ImageProducteurDirect }}" alt="" class="card-img-top" alt="image"
                    style="width:100; height:250px; object-fit:cover;">
                    <!-- CARD BODY -->
                    <div class="card-body">
                        <h5 class="card-title text-left" style="color:black;"><em>{{ producteurDirect.activite }}</em></h5>
                        
