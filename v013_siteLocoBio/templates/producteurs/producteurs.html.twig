                    <div class="card-text" style="background-color: #F29900; color:white;">
                        <p style="margin:4px; border-radius: .25em;">Adresse : {{ producteurDirect.adresse }}<br>
                            </p>
                    </div>
                </div>
            </div> 
            {% endfor %} 
    </div>
</div>
<!-- end parti producteur direct -->

<!-- FIN DONTENU DE LA PAGE -->
{% endblock %}
